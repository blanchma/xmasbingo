        <script>
        var userName = null;
          $(document).ready(function() {
              window.fbAsyncInit = function() {
            // init the FB JS SDK
              FB.init({
                appId      : '403506963062373', // App ID from the App Dashboard
                status     : true, // check the login status upon init?
                cookie     : true, // set sessions cookies to allow your server to access the session?
                xfbml      : true,  // parse XFBML tags on this page?
                logging    : true
              });

               getLoginStatus();

            }

            function getLoginStatus() {
                FB.getLoginStatus(function(response) {
                if (response.status === 'connected') {
                  // the user is logged in and has authenticated your
                  // app, and response.authResponse supplies
                  // the user's ID, a valid access token, a signed
                  // request, and the time the access token
                  // and signed request each expire
                  console.log(response);
                  var uid = response.authResponse.userID;
                  var accessToken = response.authResponse.accessToken;
                  $("#login").hide();
                  if (typeof checkLoginStatusId !== "undefined" ) {
                    clearInterval(checkLoginStatusId);
                  }
                  displayPage();
                } else if (response.status === 'not_authorized') {
                } else {
                  //$("#login").show();
                }
               });

              }

            $("#search").click(function() {
              $("#result").html("");
                  $.get("bingo", {name: userName}, function(data) {
                    console.log(data);
                    if(data === "not_found") {
                      $("#result").html("El sistema no encuentra tu usuario. Comunicate con Tute");
                    }
                    else
                    {
                    $("#result").html("Tu amigo invisible es " + data);
                    }
                    $("#result").show();
                  }
                );
            });

            function displayPage() {
              FB.api('/me', function(response) {
                userName = response.name;
                $("#who").hide();
                $("#hola").show();
                $("#name").html(userName);
                $("#search").show();
              });

            }

            checkLoginStatusId = setInterval(function() {
              getLoginStatus();
            },1000);

          });

          // Load the SDK Asynchronously
          (function(d){
           var js, id = 'facebook-jssdk', ref = d.getElementsByTagName('script')[0];
